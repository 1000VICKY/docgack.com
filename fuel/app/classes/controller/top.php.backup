/**
 * The Welcome Controller.
 *
 * A basic controller example.  Has examples of how to set the
 * response body and status.
 *
 * @package  app
 * @extends  Controller
 */
class Controller_Top extends Controller_Template
{

    /**
     * The basic top message
     *
     * @access  public
     * @return  Response
     */
    public function action_index()
    {
        $data = array();
        $this->template->title = 'トップページ/ログインページ';
        $this->template->content = View::forge(' top/index', $data);
    }

    /**
     * A typical "Hello, Bob!" type example.  This uses a Presenter to
     * show how to use them.
     *
     * @access  public
     * @return  Response
     */
    public function action_hello()
    {
        return Response::forge(Presenter::forge('top/hello'));
    }

    /**
     * The 404 action for the application.
     *
     * @access  public
     * @return  Response
     */
    public function action_404()
    {
        return Response::forge(Presenter::forge('top/404'), 404);
    }
}
